@page
@model FatsShop_2.Pages.Products.IndexModel

@{
    ViewData["Title"] = "Products";
}

<h1>Products</h1>

<!--<p>
    <a asp-page="Create">Create New</a>
</p>-->
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].ProductSize)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].ProductPrice)
            </th>
            <th style="display:none;">
                @Html.DisplayNameFor(model => model.Product[0].ID)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Product) {
        <tr>
            <td class="ProductName">
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td class="ProductSize">
                @Html.DisplayFor(modelItem => item.ProductSize)
            </td>
            <td class="ProductPrice">
                @Html.DisplayFor(modelItem => item.ProductPrice)
            </td>
            <td class="ProductId" style="display:none;">
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                <!--<a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |-->
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="/ShopCart/Create" asp-route-id="@item.ID" 
                   class="btn btn-primary AddButton"
                   onclick="addToBasket(event)">Add To Basket</a>
                <!--<a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>-->
            </td>
        </tr>
}
    </tbody>
</table>
